{
  "name": "@ai-podrostok/telegram-bot",
  "version": "0.1.0",
  "description": "AI Подросток - Telegram Bot for teen support. Inspired by Perplexity AI philosophy.",
  "main": "dist/bot.js",
  "types": "dist/bot.d.ts",
  "scripts": {
    "dev": "tsx watch bot.ts",
    "build": "tsc",
